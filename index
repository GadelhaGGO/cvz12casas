        // Função para mostrar informações do cavaleiro
        function mostrarCavaleiro(casa) {
            // Remove a classe 'active' de todos os itens
            document.querySelectorAll('.signo-item').forEach(item => {
                item.classList.remove('active');
            });
            
            // Adiciona a classe 'active' ao item clicado
            document.querySelectorAll('.signo-item')[casa-1].classList.add('active');
            
            // Obtém os dados do cavaleiro
            const cavaleiro = cavaleiros[casa];
            
            // Atualiza as informações
            document.getElementById('info-casa').textContent = cavaleiro.casa;
            document.getElementById('info-signo').textContent = cavaleiro.signo;
            document.getElementById('info-nome').textContent = cavaleiro.nome;
            document.getElementById('info-idade').textContent = cavaleiro.idade;
            document.getElementById('info-armadura').textContent = cavaleiro.armadura;
            document.getElementById('info-tecnicas').textContent = cavaleiro.tecnicas;
            document.getElementById('info-historia').textContent = cavaleiro.historia;
            
            // Atualiza a foto
            const fotoContainer = document.querySelector('.cavaleiro-foto');
            if (cavaleiro.imagem) {
                fotoContainer.innerHTML = `<img src="${cavaleiro.imagem}" alt="${cavaleiro.nome}">`;
            } else {
                fotoContainer.innerHTML = `<div class="placeholder">Imagem de ${cavaleiro.nome}</div>`;
            }
        }
        
        // Mostra o primeiro cavaleiro (Áries) ao carregar a página
        window.onload = function() {
            mostrarCavaleiro(1);
        };
    </script>
